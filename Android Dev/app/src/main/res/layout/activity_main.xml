<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:contentDescription="@string/jsLogo"
        app:srcCompat="@drawable/jslogo" />

    <EditText


        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="448dp"
        android:autofillHints="@string/hintUsername"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:text=""
        tools:ignore="LabelFor" />

    <EditText

        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="394dp"
        android:autofillHints="@string/hintpassword"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/hintpassword"
        android:inputType="textPassword"
        android:text=""
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="274dp"
        android:background="@drawable/login_button"
        android:text="@string/loginButton"
        android:textColor ="#572967"/>

    <TextView
        android:id="@+id/orMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="227dp"
        android:text="@string/or"
        android:textSize="30sp"

        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="204dp"
        android:text="@string/connectwith"
        android:textSize="20sp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:contentDescription="@string/fbsignin"
        app:srcCompat="@drawable/fbicon" />

    <EditText
        android:id="@+id/etFbLogin"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="167dp"
        android:layout_toEndOf="@+id/imageView"
        android:autofillHints="@string/fbsignin"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/fbsignin"
        tools:ignore="LabelFor,RelativeOverlap" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="74dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="87dp"
        android:contentDescription="@string/googlesignin"
        app:srcCompat="@drawable/googleicon" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="101dp"
        android:layout_toEndOf="@+id/imageView3"
        android:autofillHints=""
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/googlesignin"
        tools:ignore="LabelFor,RelativeOverlap" />

    <EditText
        android:id="@+id/accCreation"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/accCreateButton"
        android:autofillHints="@string/accCreateButton"
        tools:ignore="LabelFor" />


</RelativeLayout>