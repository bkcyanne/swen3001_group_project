<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
   >

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Settings"
        android:textAlignment="center"
        android:textColor="#52AAA5"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/ProfileIcon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/LinkedAccounts"
            app:srcCompat="@drawable/accounticon"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/ProfileClicker"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:text="@string/Profile"
            android:fontFamily="sans-serif-light"
            android:textColor="#36809F"
            android:textSize="25sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/notificationImage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/LinkedAccounts"
            app:srcCompat="@drawable/notificationicon"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/Notifications"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:text="@string/Notifications"
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:textColor="#36809F"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/invitefriendicon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/LinkedAccounts"
            app:srcCompat="@drawable/inviteafriendicon"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/inviteFriend"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:text="@string/InviteFriend"
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:textColor="#36809F"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/Preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preferences"
        android:textSize="25sp"
        android:textColor="#000080"
        android:layout_marginStart="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




    <TextView
        android:id="@+id/FirstDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/FirstDay"
        android:textSize="25sp"
        android:textColor="#36809F"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/firstDaySpinner"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/checkbox"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/Language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"

            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/Language"
            android:textColor="#36809F"
            android:textSize="25sp" />


        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/langSpinner"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/checkbox"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
    <TextView
        android:id="@+id/Themes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"

        android:text="@string/Themes"
        android:textSize="25sp"
        android:textColor="#36809F"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/themeSpinner"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/checkbox"/>
    </LinearLayout>

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:text="@string/signout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomNav"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/menu"/>
    </RelativeLayout>
</LinearLayout>