<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccCreationPage">

  <TextView
      android:id="@+id/createAccText"
      android:layout_width="272dp"
      android:layout_height="91dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="35dp"
      android:layout_marginBottom="669dp"
      android:text="@string/createAccText"
      android:textSize="30sp" />

  <ImageView
      android:id="@+id/addProfilePic"
      android:layout_width="159dp"
      android:layout_height="119dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="122dp"
      android:layout_marginBottom="582dp"
      android:contentDescription="@string/profilePicAdd"
      app:srcCompat="@drawable/addprofile" />

  <TextView
      android:id="@+id/editTextTextPersonName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="79dp"
      android:layout_marginBottom="557dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="@string/addProfilePic"
      android:textSize="20sp"

      tools:ignore="RelativeOverlap,TextViewEdits" />

  <EditText
      android:id="@+id/cpName"
      android:layout_width="227dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="79dp"
      android:layout_marginEnd="87dp"
      android:layout_marginBottom="469dp"
      android:autofillHints=""
      android:background="#11000000"
      android:ems="10"
      android:hint="@string/cpName"
      android:inputType="textPersonName"
      tools:ignore="RelativeOverlap" />

  <EditText
      android:id="@+id/cpEmail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="79dp"
      android:layout_marginEnd="87dp"
      android:layout_marginBottom="425dp"
      android:autofillHints=""
      android:background="#11000000"
      android:ems="10"
      android:hint="@string/cpEmail"
      android:inputType="textEmailAddress" />

  <EditText
      android:id="@+id/cpPassword"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="79dp"
      android:layout_marginEnd="87dp"
      android:layout_marginBottom="383dp"
      android:autofillHints="@string/cpPassword"
      android:background="#11000000"
      android:ems="10"
      android:hint="@string/cpPassword"
      android:inputType="textPassword" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="306dp"
      android:layout_height="63dp"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="4dp"
      android:layout_marginBottom="320dp"
      android:text="@string/cpPasswordWarning"
      android:textColor="#FF0000"
      android:textSize="12sp" />

  <EditText
      android:id="@+id/cpPasswordConf"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="79dp"
      android:layout_marginEnd="87dp"
      android:layout_marginBottom="309dp"
      android:ems="10"
      android:inputType="textPassword"
      android:hint="@string/cpPasswordConf"
      android:autofillHints="@string/cpPasswordConf"
      android:background="#11000000"/>

  <Button
      android:id="@+id/accCreationButton"
      android:layout_width="170dp"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginEnd="125dp"
      android:layout_marginBottom="190dp"
      android:text="@string/cpCreate"
      android:background="@drawable/login_button"

      android:textColor="#FFFFFF" />

</RelativeLayout>