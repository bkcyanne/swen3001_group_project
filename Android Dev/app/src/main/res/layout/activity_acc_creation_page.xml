<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".accCreationPage">


    <EditText
        android:id="@+id/fullName"
        android:layout_width="224dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="385dp"
        android:autofillHints="asd"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/fullName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="314dp"
        android:autofillHints="asd"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/cAPassword"
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="252dp"
        android:autofillHints="asd"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/cAPassword"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/cAPasswordConf"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="146dp"
        android:autofillHints="asd"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/cAPasswordConf"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="553dp"
        android:text="@string/createAccount"
        android:textColor="#52AAA5"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="204dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="222dp"
        android:text="@string/warning"
        android:textColor="#FF0000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ProfilePicText"
        android:layout_width="204dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="446dp"
        android:text="@string/addPhotoText"

        android:textSize="12sp" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/shape"

        android:text="@string/createButton" />

    <ImageView
        android:id="@+id/addProflePic"
        android:layout_width="106dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="471dp"
        app:srcCompat="@drawable/addimage"
        android:contentDescription="@string/addProfile" />




</RelativeLayout>